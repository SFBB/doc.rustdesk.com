---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'RustDesk Open Source - Free Remote Desktop Software & Community',
  description: 'RustDesk is a completely open-source remote desktop software. Join our community, contribute to development, and enjoy free remote access solutions with full source code access.',
  keywords: 'rustdesk open source, free remote desktop software, open source remote access, github rustdesk, remote desktop community, free self-hosted remote desktop',
  author: 'RustDesk Team',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="We love Open-Source"
    actions={[
      {
        text: 'Find Open Issues',
        href: 'https://github.com/rustdesk/rustdesk/issues',
        icon: 'tabler:brand-github',
        target: '_blank',
      },
      {
        text: 'Follow on GitHub',
        href: 'https://github.com/rustdesk/rustdesk',
        icon: 'tabler:brand-github',
        variant: 'primary',
        target: '_blank',
      },
    ]}
  >
    <Fragment slot="title"> RustDesk is built by the open-source community </Fragment>

    <Fragment slot="subtitle">
      Be inspired and inspire others by joining our community of maintainers and contributors. Together, let's make
      RustDesk better for people all around the world.
    </Fragment>
  </Hero>
</Layout>

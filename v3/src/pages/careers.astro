---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'RustDesk Careers - Join Our Remote Desktop Software Development Team',
  description: 'Join the RustDesk team and help build the future of open-source remote desktop software. Explore career opportunities in remote access technology and self-hosted solutions.',
  keywords: 'rustdesk careers, remote desktop jobs, open source software jobs, self-hosted technology careers, remote access development jobs, software engineering positions',
  author: 'RustDesk Team',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="Careers">
    <Fragment slot="title"> Current Job Openings </Fragment>

    <Fragment slot="subtitle">
      We are not currently hiring, but please check back later.
      <p class="text-slate-500">
        Meanwhile, feel free to contribute to our open-source repository and collaborate with us there!
      </p>
    </Fragment>
  </Hero>
</Layout>
